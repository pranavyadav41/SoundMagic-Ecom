    <!-- Hero Section Begin -->
    <% if (banners.length==0){ %>
    <section class="hero">
        <div class="hero__slider owl-carousel">
            <div class="hero__items set-bg" data-setbg="img/hero/hero-1.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h2>Immerse Yourself in Sonic Bliss</h2>
                                <p style="color:black;">Indulge Your Senses: Unleash the Power of Crystal-Clear Sound with Our Exceptional Headphone Collection. Elevate Your Audio Experience Today!</p>
                                <a href="/shop" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hero__items set-bg" data-setbg="img/hero/hero-2.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h2>11.1.4 Channel soundbar
                                    with Dolby Atmos</h2>
                                <p style="color: black;">Unleash Cinematic Brilliance: Elevate your home audio with our premium soundbars. Immerse yourself in crystal-clear sound, bringing movies, music, and gaming to life. Experience audio excellence at its finest. Discover our soundbars collection today!</p>
                                <a href="/shop" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% }else{ %>

        <section class="hero">
            <div class="hero__slider owl-carousel">
                <% banners.forEach((banner)=>{ %>
               
                <div class="" style="background-image: url('/productImages/<%= banner.image[0] %>'); width:1519.2px;height:800px;">
                   
                    <div class="container ">
                        <div class="row">
                            <div class="col-xl-5 col-lg-7 col-md-8">
                                <div class="hero__text" style="margin-top: 200px;">
